{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "build/",
    "types": ["jest", "node"]
  },
  "include": ["src/*"],
  "exclude": ["node_modules", ".npm"]
}
